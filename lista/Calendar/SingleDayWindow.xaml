<TabControl  x:Class="Calendar.SingleDayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local ="clr-namespace:Calendar"
        mc:Ignorable="d"
         Height="400" Width="150">
    <Grid >
        <Rectangle Fill="{Binding BackgroundColor}"/>
        <StackPanel Margin="10"
                    Name="NewStackPanel">
            <Label Content="{Binding DateDayNumber}"/>
            <TextBlock Text="{Binding DateDay, Mode=OneWay}" />
            <TextBlock Text="{Binding Notes, Mode=OneWay}"/>
            <Button Content="Dodaj"
                    Click="AddNoteButton_Click"
                    HorizontalAlignment="{Binding ElementName=AddNoteButton, Path=HorizontalAlignment, Mode=OneWay}"
                    VerticalAlignment="{Binding ElementName=AddNoteButton, Path=VerticalAlignmen, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</TabControl>
