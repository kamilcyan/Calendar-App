<Window x:Class="Calendar.SingleDayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="SingleDayWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10"
                    Name="NewStackPanel">
            <TextBlock Text="{Binding ElementName=DateTextBlock, Path=Text, Mode=OneWay}"
                       Margin="{Binding ElementName=DateTextBlock, Path=Margin, Mode=OneWay}"
                       FontSize="{Binding ElementName=DateTextBlock, Path=FontSize, Mode=OneWay}"/>
            <TextBlock Text="{Binding ElementName=ListOfNotes, Path=Text, Mode=OneWay}"/>
            <TextBlock Text="{Binding ElementName=ShowNotes, Path=Text, Mode=OneWay}"/>
            <Button Content="{Binding ElementName=AddNoteButton, Path=Content, Mode=OneWay}"
                    Click="AddNoteButton_Click"
                    HorizontalAlignment="{Binding ElementName=AddNoteButton, Path=HorizontalAlignment, Mode=OneWay}"
                    VerticalAlignment="{Binding ElementName=AddNoteButton, Path=VerticalAlignmen, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Window>
