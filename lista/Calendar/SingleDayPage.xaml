<UserControl  x:Class="Calendar.SingleDayPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="NewStackPanel" Background="LightGreen" Margin="2,2,2,1">
        <Rectangle Fill="{Binding BackgroundColor}"/>
        <Label Content="{Binding DateDayNumber}"/>
        <TextBlock Text="{Binding DateDay, Mode=OneWay}" />
        <TextBlock Text="{Binding Notes, Mode=OneWay}"/>
        <Button Content="Dodaj"
                    Click="AddNoteButton_Click"
                    HorizontalAlignment="{Binding ElementName=AddNoteButton, Path=HorizontalAlignment, Mode=OneWay}"
                    VerticalAlignment="{Binding ElementName=AddNoteButton, Path=VerticalAlignmen, Mode=OneWay}"/>

    </StackPanel>
</UserControl>